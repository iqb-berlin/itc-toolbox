<Page x:Class="RegisterWebCredentialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:libco="clr-namespace:iqb.lib.components;assembly=iqblib-components"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="Credentials"
      d:DesignHeight="300" d:DesignWidth="516">
    <Page.Resources>
        <ResourceDictionary Source="pack://application:,,,/iqblib-components;component/GlobalStyles.xaml"/>
    </Page.Resources>

    <DockPanel>
        <DockPanel.Resources>
            <libco:IntegerVisibilityGreaterThen0Converter x:Key="IntegerVisibilityGreaterThen0Converter"/>
            <libco:IntegerBooleanExact1Converter x:Key="IntegerBooleanExact1Converter"/>
        </DockPanel.Resources>
        <ItemsControl Style="{StaticResource gsDialogBoxFooter}" DockPanel.Dock="Bottom" ItemContainerStyle="{StaticResource gsDialogBoxFooterButton}" Panel.ZIndex="2">
            <Button Name="BtnContinue" Width="150" Click="BtnContinue_Click" IsEnabled="{Binding ElementName=CrUC, Path=IsValid}">Weiter: Registrieren</Button>
            <Button Name="BtnCancel" Click="BtnCancel_Click">Abrechen</Button>
        </ItemsControl>
        <libco:CredentialsUserControl x:Name="CrUC" Margin="5" />
    </DockPanel>
</Page>
